<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.News" parent="Base.Theme.News" />

    <style name="Base.Theme.News" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background color. -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Error color. -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/white</item>

        <!-- Text color. -->
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="toolbarStyle">@style/CustomToolbar</item>


    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color in dark theme -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color in dark theme -->
        <item name="colorSecondary">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background color in dark theme -->
        <item name="android:colorBackground">@color/colorBackgroundDark</item>
        <item name="colorSurface">@color/colorSurfaceDark</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Text color in dark theme -->
        <item name="android:textColor">@color/textColorPrimaryDark</item>
    </style>

    <style name="Title.Text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:fontFamily">@font/font_bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="SubTitle.Text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorSubTitle</item>

    </style>

    <style name="Small.Text" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:fontFamily">@font/font_regular</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorGray</item>

    </style>
    <style name="CustomToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleText</item>
    </style>


    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/font_bold</item>
    </style>


</resources>